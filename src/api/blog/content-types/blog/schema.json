{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": "All blog content including articles, guides, videos, and growth kits"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "contentBlocks": {
      "type": "dynamiczone",
      "components": [
        "blog.rich-text",
        "blog.quote",
        "blog.callout",
        "blog.image",
        "blog.card-grid",
        "blog.cta-box"
      ]
    },
    "contentType": {
      "type": "enumeration",
      "enum": [
        "article",
        "guide",
        "educational-hub",
        "question-content",
        "video",
        "growth-kit"
      ],
      "required": true,
      "default": "article"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "blogs"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "blogs"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "blogs"
    },
    "readTime": {
      "type": "string",
      "maxLength": 50
    },
    "publishedDate": {
      "type": "date",
      "required": true
    },
    "videoDuration": {
      "type": "string",
      "maxLength": 20
    },
    "videoUrl": {
      "type": "string",
      "maxLength": 500
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
